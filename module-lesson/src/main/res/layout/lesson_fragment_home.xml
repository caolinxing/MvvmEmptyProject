<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.zhulong.lesson.R" />
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <variable
            name="viewModel"
            type="com.zhulong.lesson.view.lesson_home.LessonViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{viewModel.pagerIndex==0 ? @color/base_color_f4 : @color/base_white}">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_white"
            binding:tl_indicator_color="@color/base_red"
            binding:tl_indicator_height="2dp"
            binding:tl_indicator_width="36dp"
            binding:tl_tab_space_equal="true"
            binding:tl_textSelectColor="@color/base_red"
            binding:tl_textUnselectColor="@color/base_color_444444"
            binding:tl_textsize="12sp"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_below="@id/tab_layout"/>
    </RelativeLayout>
</layout>