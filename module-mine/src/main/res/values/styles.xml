<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!--StartActivity Style 冷启动效果-->
    <style name="AppThemeStart" tools:ignore="ResourceName" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/base_red</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="TabLayoutTextStyle" tools:ignore="ResourceName">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mine_my_center_group_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/base_white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mine_my_center_group_son">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/base_font_black</item>
    </style>

    <style name="mine_my_center_lin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@color/base_white</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="mine_my_center_gift">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/base_white</item>
    </style>
</resources>
