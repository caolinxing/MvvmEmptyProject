<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!--StartActivity Style 冷启动效果-->
    <style name="AppThemeStart" tools:ignore="ResourceName" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/main_splash_start</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/base_red</item>
        <item name="android:typeface">monospace</item>
<!--
        <item name="android:background">@color/base_color_f7</item>
-->
        <item name = "md_color_title">@color/base_font_black</item>
        <item name = "md_color_content">@color/base_font_black</item>
        <item name = "md_color_button_text">@color/base_font_black</item>


    </style>
    <style name="TabLayoutTextStyle" tools:ignore="ResourceName">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
